<android.support.design.widget.CoordinatorLayout
    android:id="@+id/profile_coordinator_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nonso.android.nonso.ui.fragments.ProfileFragment">

    
    <android.support.design.widget.AppBarLayout
        android:id="@+id/profile_appbar_container"
        android:layout_width="match_parent"
        android:layout_height="192dp"
        android:background="@drawable/grey_border_bottom_light">

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_margin="10dp"
                    android:src="@drawable/asser"
                    app:civ_border_color="@color/colorPrimary"
                    app:civ_border_width="2dp" />

                <TextView
                    android:id="@+id/tv_profile_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="80dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_toRightOf="@id/profile_image" />

                <TextView
                    android:id="@+id/tv_profile_goals"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/profile_image"
                    android:layout_below="@id/tv_profile_username"
                    android:text="@string/profile_goals_temp"
                   />

                <Button
                    android:id="@+id/btn_profile_follow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_follow"
                    android:textColor="@color/colorPrimary"
                    android:layout_below="@id/tv_profile_goals"
                    android:layout_toRightOf="@id/profile_image"
                    android:background="@drawable/primary_border_all"
                    android:textSize="@dimen/profile_follow_btn_text_size"
                    android:minHeight="@dimen/profile_follow_btn_min_height"
                    android:minWidth="@dimen/profile_follow_btn_min_width"
                    android:layout_marginTop="@dimen/profile_follow_btn_margin_top"
                    style="?android:attr/borderlessButtonStyle"/>

            </RelativeLayout>

            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:paddingRight="6dp"
                app:layout_collapseMode="pin">

                <ImageButton
                    android:id="@+id/btn_profile_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_settings_light" />
            </android.support.v7.widget.Toolbar>


        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <FrameLayout
        android:id="@+id/profile_journeys_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_anchorGravity="bottom|right|end"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_profile_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:color="@color/colorAccent"
        android:src="@drawable/ic_editor_light"
        app:borderWidth="0dp"
        app:fabSize="mini"
        app:layout_anchorGravity="bottom|right|end"
        app:layout_anchor="@id/profile_journeys_container"/>



</android.support.design.widget.CoordinatorLayout>
