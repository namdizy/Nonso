<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/profile_journey_item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="2dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/profile_journey_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="16dp"/>

            <TextView
                android:id="@+id/profile_journey_item_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_journey_item_title"
                android:layout_toLeftOf="@id/profile_journey_item_image"
                android:layout_toStartOf="@id/profile_journey_item_image"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textSize="14sp"/>

            <ImageView
                android:id="@+id/profile_journey_item_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignRight="@id/profile_journey_item_title"
                android:layout_margin="16dp"
                android:scaleType="centerCrop"/>

        </RelativeLayout>



    </android.support.v7.widget.CardView>
</LinearLayout>
