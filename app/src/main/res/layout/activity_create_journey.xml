<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="nonso.android.nonso.ui.activities.CreateJourneyActivity">

    <android.support.v7.widget.Toolbar
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/create_journey_toolbar"
        app:layout_scrollFlags="scroll|enterAlways"
        android:background="@drawable/grey_border_bottom_light">

        <ImageButton
            android:id="@+id/btn_create_journeys_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_chevron_left"
            android:background="@android:color/transparent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_journeys_header"
            android:layout_marginLeft="@dimen/settings_toolbar_h1_margin"
            android:layout_marginStart="@dimen/settings_toolbar_h1_margin"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/settings_h1_text_size" />
    </android.support.v7.widget.Toolbar>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/create_journey_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/create_journey_page_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_photo_dark"
                android:scaleType="fitCenter"
                android:layout_margin="@dimen/create_journeys_item_margin"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/create_journey_input_name"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/create_journey_input_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/create_journeys_item_margin"
                app:layout_constraintTop_toBottomOf="@id/create_journey_page_image"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <EditText
                    android:id="@+id/tv_create_journeys_input_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/create_journey_name"
                    android:inputType="text"
                    android:textColor="@color/colorGrayDark"
                    android:textColorHint="@color/colorGrayDark" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/tv_create_journeys_description_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/create_journeys_item_margin"
                android:hint="@string/create_journey_description_hint"
                app:layout_constraintTop_toBottomOf="@id/create_journey_input_name"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/create_journey_player_view">

                <EditText
                    android:id="@+id/tv_create_journeys_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:isScrollContainer="true"
                    android:minHeight="@dimen/create_journey_description_min_height"
                    android:textColor="@color/colorGrayDark"
                    android:textColorHint="@color/colorGrayDark" />
            </android.support.design.widget.TextInputLayout>




            <com.google.android.exoplayer2.ui.SimpleExoPlayerView
                android:id="@+id/create_journey_player_view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="invisible"
                android:layout_margin="@dimen/create_journeys_item_margin"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_create_journeys_description_container">

            </com.google.android.exoplayer2.ui.SimpleExoPlayerView>


            <Button
                android:id="@+id/btn_create_journey_pick_video"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:drawableLeft="@drawable/ic_upload_dark"
                android:text="upload video description"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
