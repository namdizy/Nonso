<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="nonso.android.nonso.ui.activities.CreateJourneyActivity">

    <android.support.v7.widget.Toolbar
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/create_journey_toolbar"
        app:layout_scrollFlags="scroll|enterAlways"
        android:background="@drawable/grey_border_bottom_light">

        <ImageButton
            android:id="@+id/btn_create_journeys_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_chevron_left"
            android:background="@android:color/transparent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_journeys_header"
            android:layout_marginLeft="@dimen/settings_toolbar_h1_margin"
            android:layout_marginStart="@dimen/settings_toolbar_h1_margin"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/settings_h1_text_size" />
    </android.support.v7.widget.Toolbar>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/create_journey_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/create_journeys_page_margin"
            android:layout_marginLeft="@dimen/create_journeys_page_margin"
            android:layout_marginRight="@dimen/create_journeys_page_margin"
            android:layout_marginStart="@dimen/create_journeys_page_margin"
            android:orientation="vertical"

            >

            <ImageView
                android:id="@+id/create_journey_page_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:src="@drawable/ic_photo_dark"

                android:scaleType="fitCenter"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/create_journey_input_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">

                <EditText
                    android:id="@+id/tv_create_journeys_input_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/create_journey_name"
                    android:inputType="text"
                    android:textColor="@color/colorGrayDark"
                    android:textColorHint="@color/colorGrayDark" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/tv_create_journeys_description_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:hint="@string/create_journey_description_hint">

                <EditText
                    android:id="@+id/tv_create_journeys_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:isScrollContainer="true"
                    android:minHeight="@dimen/create_journey_description_min_height"
                    android:textColor="@color/colorGrayDark"
                    android:textColorHint="@color/colorGrayDark" />
            </android.support.design.widget.TextInputLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/create_journey_video_box_height"
                android:background="@drawable/grey_border_light">

                <com.google.android.exoplayer2.ui.SimpleExoPlayerView
                    android:id="@+id/create_journey_player_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="invisible">

                </com.google.android.exoplayer2.ui.SimpleExoPlayerView>

                <Button
                    android:id="@+id/btn_create_journey_pick_video"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableLeft="@drawable/ic_upload_dark"
                    android:text="upload video description"
                   />
            </FrameLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
