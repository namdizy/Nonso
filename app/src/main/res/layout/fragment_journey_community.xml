<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.JourneyCommunityFragment">

   <android.support.v4.widget.NestedScrollView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">

   </android.support.v4.widget.NestedScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/grey_border_light">

        <TextView
            android:id="@+id/journey_profile_community_comment"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ms_bottom_navigation_bar_height"
            android:background="@drawable/rounded_corner"
            android:layout_margin="@dimen/margin_10dp"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textSize="@dimen/h4"
            android:text="@string/journey_profile_add_comment"
            />
    </FrameLayout>
</android.support.constraint.ConstraintLayout>