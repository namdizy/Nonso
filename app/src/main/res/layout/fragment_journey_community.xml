<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragments.JourneyCommunityFragment">

    <FrameLayout
        android:id="@+id/journey_profile_community_add_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/grey_border_light">

        <TextView
            android:id="@+id/journey_profile_community_post"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ms_bottom_navigation_bar_height"
            android:background="@drawable/rounded_corner"
            android:layout_margin="@dimen/margin_10dp"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textSize="@dimen/h4"
            android:text="@string/journey_profile_add_post"
            />
    </FrameLayout>

   <android.support.v4.widget.NestedScrollView
       android:id="@+id/journey_profile_community_comments_container"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <android.support.v7.widget.RecyclerView
           android:id="@+id/journey_profile_community_post_recyclerview"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:paddingBottom="@dimen/margin_5dp"/>

   </android.support.v4.widget.NestedScrollView>


</LinearLayout>