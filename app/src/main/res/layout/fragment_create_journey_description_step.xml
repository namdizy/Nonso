<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.createJourneys.DescriptionStepperFragment"
    android:tag="create_journey_step">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">
        <ImageButton
            android:id="@+id/create_journey_description_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close_dark"
            android:background="@null"
            android:layout_margin="10dp"
            />


        <ImageView
            android:id="@+id/create_journey_description_profile_image"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/create_journey_description_image_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            >

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circular_view"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_photo_dark" />
            </FrameLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Image"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/create_journey_input_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:textColorHint="@color/colorPrimary"
            >

            <EditText
                android:id="@+id/edit_create_journeys_input_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:hint="@string/create_journey_name"
                android:inputType="text"
                />
        </android.support.design.widget.TextInputLayout>

        <include layout="@layout/divider_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"/>
        <Button
            android:id="@+id/create_journey_description_select_category"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Select Category"/>

        <HorizontalScrollView
            android:id="@+id/create_journey_description_horizontal_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.chip.ChipGroup
                android:id="@+id/create_journey_description_chip_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_5"
                app:singleLine="true"/>
        </HorizontalScrollView>

        <include layout="@layout/divider_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/create_journey_input_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:textColorHint="@color/colorPrimary">

            <EditText
                android:id="@+id/edit_create_journeys_input_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:hint="@string/create_journey_description_hint"
                android:inputType="textMultiLine"
                android:lines="4"
                android:maxLength="140"
                android:gravity="top|start"
                />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

</ScrollView>
