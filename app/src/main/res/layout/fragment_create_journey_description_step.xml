<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.createJourneys.DescriptionStepperFragment"
    android:tag="create_journey_step"
    android:background="@color/colorWhite">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/create_journey_description_scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/create_journey_description_tag_search_container"
        app:layout_constraintLeft_toLeftOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="true">
            <ImageButton
                android:id="@+id/create_journey_description_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_close_dark"
                android:background="@null"
                android:layout_margin="10dp"
                />

            <ImageView
                android:id="@+id/create_journey_description_profile_image"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/create_journey_description_image_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                >

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circular_view"
                    android:layout_gravity="center_horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_photo_dark" />
                </FrameLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Image"
                    android:layout_marginTop="5dp"
                    android:textColor="#C0C0C0"
                    android:layout_gravity="center"/>

            </LinearLayout>



            <EditText
                android:id="@+id/edit_create_journeys_input_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#C0C0C0"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_20"
                android:hint="Name"
                android:textSize="@dimen/h1"
                android:background="@android:color/transparent" />
            <EditText
                android:id="@+id/edit_create_journeys_input_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#C0C0C0"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_20"
                android:textSize="@dimen/h2"
                android:background="@android:color/transparent"
                android:hint="@string/create_journey_description_hint"
                android:textColorHint="#C0C0C0"
                android:inputType="textMultiLine"
                android:maxLength="140"
                android:gravity="top|start"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


    <LinearLayout
        android:id="@+id/create_journey_description_tag_search_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center_vertical"
        android:background="@color/colorWhite"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/create_journey_description_scroll"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/create_journey_description_horizontal_scroll_view">

        <ImageView
            android:layout_width="@dimen/small_image_size_small"
            android:layout_height="@dimen/small_image_size_small"
            android:src="@drawable/ic_tag_dark"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <android.support.design.chip.ChipGroup
                    android:id="@+id/create_journey_description_tags_chip_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_5"
                    app:singleLine="true"/>

                <EditText
                    android:id="@+id/create_journey_description_tag_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/h4"
                    android:hint="Add up to four tags"
                    android:textColorHint="#C0C0C0"
                    android:layout_margin="@dimen/dp_5"
                    android:background="@android:color/transparent"/>

            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
    <HorizontalScrollView
        android:id="@+id/create_journey_description_horizontal_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:paddingBottom="@dimen/dp_5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/create_journey_description_tag_search_container"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <android.support.design.chip.ChipGroup
            android:id="@+id/create_journey_description_chip_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_5"
            app:singleLine="true"/>
    </HorizontalScrollView>
</android.support.constraint.ConstraintLayout>
