<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activities.StepDetailsActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/step_details_constraint_container"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/grey_border_bottom_light">

        <ImageButton
            android:id="@+id/step_details_close_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_weight="1"
            android:src="@drawable/ic_close_dark"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@null"
            android:layout_margin="10dp"
            />

        <TextView
            android:id="@+id/step_details_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_weight="4"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="@dimen/h3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/step_details_cheers_container"
            app:layout_constraintLeft_toRightOf="@id/step_details_close_btn"
            android:layout_marginStart="@dimen/activity_horizontal_margin"/>

        <LinearLayout
            android:id="@+id/step_details_cheers_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@id/step_details_title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin">
            <TextView
                android:id="@+id/step_details_claps_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin_5dp"
                android:text="99 cheers"
                android:textAlignment="center"
                android:textSize="@dimen/h5"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>


    </android.support.constraint.ConstraintLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <io.square1.richtextlib.ui.RichContentView
            android:padding="10dip"
            android:id="@+id/step_details_text_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hello_blank_fragment" />
    </ScrollView>
</LinearLayout>