<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8dp"
        android:layout_marginEnd="@dimen/margin_8dp"
        android:layout_marginBottom="1dp"
        android:layout_marginStart="@dimen/margin_8dp"
        app:cardCornerRadius="@dimen/margin_5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/post_list_item_Creator_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/post_creator_image"
                    android:layout_width="@dimen/small_image_size_small"
                    android:layout_height="@dimen/small_image_size_small"
                    android:gravity="center_vertical"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:src="@drawable/profile_image_placeholder" />

                <TextView
                    android:id="@+id/post_creator_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginStart="@dimen/margin_8dp" />

                <TextView
                    android:id="@+id/post_created_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginStart="@dimen/margin_8dp"
                    android:textSize="@dimen/h7"
                    android:textStyle="italic" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

                <ImageButton
                    android:id="@+id/post_item_more_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20dp"
                    android:src="@drawable/ic_more_dark"
                    android:scaleType="centerInside"
                    android:gravity="center_vertical"
                    android:background="@null"/>
            </LinearLayout>

            <TextView
                android:id="@+id/post_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_below="@id/post_list_item_Creator_container"
                android:textSize="@dimen/h3"
                android:ellipsize="end"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/post_item_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/post_item_title"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/margin_5dp"
                android:layout_marginBottom="@dimen/margin_8dp"
                android:maxLines="4"
                android:ellipsize="end"
                android:textSize="@dimen/h6" />


            <LinearLayout
                android:id="@+id/post_item_reply_container_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/post_item_body"
                android:layout_alignParentStart="true"
                android:orientation="horizontal"
                android:paddingTop="@dimen/margin_5dp"
                android:paddingBottom="@dimen/margin_5dp"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:background="@color/colorGreyLight">

                <TextView
                    android:id="@+id/post_item_replies"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/margin_5dp"
                    android:textSize="@dimen/h5"
                    android:gravity="center" />
                <View android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" />

                <LinearLayout
                    android:id="@+id/post_item_reply_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/post_item_reply_image"
                        android:layout_width="@dimen/_20dp"
                        android:layout_height="@dimen/_20dp"
                        android:src="@drawable/ic_reply_dark"
                        />
                    <TextView
                        android:id="@+id/post_item_reply_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/margin_5dp"
                        android:text="Reply"
                        android:textSize="@dimen/h5"
                        android:gravity="center"
                        />
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>