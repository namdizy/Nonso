<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/step_archive_item_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginBottom="2dp"
        app:cardCornerRadius="@dimen/dp_5">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/step_archive_item_created_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:textSize="@dimen/h7"
                android:textStyle="italic"
                android:layout_alignParentStart="true"
                android:layout_alignBottom="@id/step_archive_item_more_btn"/>

            <ImageButton
                android:id="@+id/step_archive_item_more_btn"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_20"
                android:src="@drawable/ic_more_dark"
                android:background="@null"
                android:scaleType="centerInside"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"/>

            <com.google.android.exoplayer2.ui.SimpleExoPlayerView
                android:id="@+id/step_archive_item_exo_player"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="256dp"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_below="@id/step_archive_item_created_time"/>

            <RelativeLayout
                android:id="@+id/step_archive_item_images_container"
                android:layout_below="@id/step_archive_item_created_time"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_8"
                android:visibility="gone"
                android:layout_height="512dp">
                <android.support.v4.view.ViewPager
                    android:id="@+id/pager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    />
                <me.relex.circleindicator.CircleIndicator
                    android:id="@+id/indicator"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_alignParentBottom="true" />
            </RelativeLayout>

            <TextView
                android:id="@+id/step_archive_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/dp_8"
                android:textSize="@dimen/h4"
                android:textStyle="bold"
                android:layout_below="@id/step_archive_item_exo_player" />
            <TextView
                android:id="@+id/step_archive_item_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/dp_8"
                android:textSize="@dimen/h6"
                android:layout_below="@id/step_archive_item_title"
                android:layout_marginBottom="@dimen/activity_horizontal_margin" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>